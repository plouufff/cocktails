{% extends 'layout.html.twig' %}

{% block title %}Cocktails{% endblock %}

{% block content %}
    <section class="cocktails py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for cocktail in cocktails %}
                    <div class="col-md-3 mb-4">
                        <div class="card border-0 h-100 {{ 'card-hue-' ~ hue }}">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h3 class="card-title font-weight-bold text-center">{{ cocktail.name|title }}</h3>
                                <div class="mb-3 text-center">
                                    {% for cocktail_ingredient in cocktail.cocktailIngredients %}
                                        <span class="badge {{ 'badge-hue-' ~ hue }}">
                                            {{ cocktail_ingredient.ingredient|capitalize }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="card-footer border-0 text-center">
                                <a type="button" class="btn btn-sm stretched-link {{ 'btn-hue-' ~ hue }}"
                                   href="{{ path('cocktail', {slug: cocktail.slug}) }}"
                                >
                                    voir la recette
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

